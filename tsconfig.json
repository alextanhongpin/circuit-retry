{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "outDir": "./dist",
    "strict": true,
    "types" : [ "node" ]
  },
  "include": [
    "src/**/*",
    "./node_modules/@types/node"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}